history=[]
  def cal(op,x,y):
    if op=='+':
      return x+y
    elif op=='-':
      return x-y
    elif op=='*':
      return x*y
    elif op=='/':
      return x/y
    
    else:
      return "invalid"
  while True:
    print("Enter the operation you want to perform")
    x=int(input("enter the first number"))
    y=int(input("enter the second number"))
    op=input("enter the operator")
    print(cal(op,x,y))
    history.append(cal(op,x,y))
    print(history)


  
 
  
 
